{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "baseUrl": ".",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@packages/*": ["./packages/*"],
      "@docs/*": ["./app/src/docs/lib/*"],
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "include": [
    "./**/*", "app", "scripts"
  ],
  "exclude": [
    "**/*/node_modules",
    "**/*/dist",
    "**/*.test.tsx",
    "vite.config.js",
  ],
}
